<div>
	<%= form_for @kitten do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :age %>
		<%= f.number_field :age %>

		<% rating = (1..10).to_a%>
		<%= f.label :cuteness %>
		<%= f.select :cuteness, options_for_select(rating) %>

		<%= f.label :softness %>
		<%= f.select :softness, options_for_select(rating) %>

		<%= f.submit yield(:kitten_option) %>
	<%end%>
</div>